<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/log_in_card"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardCornerRadius="18dp"
        android:elevation="10dp"
        android:layout_gravity="center">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/header_label_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:text="Регистрация"
                android:textStyle="bold"
                android:textSize="31dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/username_signup_edit_text"
                android:paddingLeft="15dp"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:hint="имя пользователя"
                android:background="@drawable/round_stroke_border"
                app:layout_constraintTop_toBottomOf="@id/header_label_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/password_signup_edit_text"
                android:paddingLeft="15dp"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:hint="пароль"
                android:inputType="textPassword"
                android:background="@drawable/round_stroke_border"
                app:layout_constraintTop_toBottomOf="@id/username_signup_edit_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:id="@+id/to_sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="зарегистрироваться"
                android:backgroundTint="@color/black"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>