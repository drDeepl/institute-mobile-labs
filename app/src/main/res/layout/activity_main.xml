<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="0dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/welcome_card_main"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="-20dp"
        sothree:layout_constraintEnd_toEndOf="parent"
        sothree:layout_constraintHorizontal_bias="0.5"
        sothree:layout_constraintStart_toStartOf="parent"
        sothree:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/black"
        sothree:cardCornerRadius="28dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/genre_text"
                android:layout_width="256dp"
                android:layout_height="64dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="64dp"
                android:text="Привет!"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/message_background"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintHorizontal_bias="0.5"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                sothree:srcCompat="@drawable/emoji_heart_eye"
                android:layout_marginTop="128dp"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintHorizontal_bias="0.5"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_books"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        sothree:layout_constraintHorizontal_bias="0.5"
        sothree:layout_constraintStart_toStartOf="parent"
        sothree:layout_constraintEnd_toEndOf="parent"
        sothree:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp">
        <TextView
            android:id="@+id/new_books"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Новинки"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            sothree:layout_constraintHorizontal_bias="0.5"
            sothree:layout_constraintStart_toStartOf="parent"
            sothree:layout_constraintEnd_toEndOf="parent"
            sothree:layout_constraintBottom_toBottomOf="parent"/>

<!--        <TextView-->
<!--            android:id="@+id/popular_books"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:clickable="true"-->
<!--            android:text="Популярные"-->
<!--            android:textSize="24dp"-->
<!--            android:textAlignment="center"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginLeft="200dp"-->
<!--            sothree:layout_constraintHorizontal_bias="0.5"-->
<!--            sothree:layout_constraintStart_toStartOf="parent"-->
<!--            sothree:layout_constraintEnd_toEndOf="parent"-->
<!--            sothree:layout_constraintBottom_toBottomOf="parent"/>-->
    </androidx.cardview.widget.CardView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sothree:layout_constraintTop_toBottomOf="@+id/menu_books"
        sothree:layout_constraintBottom_toTopOf="@+id/bottom_navigation"/>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        sothree:itemIconSize="28dp"
        sothree:flow_verticalAlign="center"
        sothree:menu="@menu/bottom_navigation_menu"
        sothree:layout_constraintEnd_toEndOf="parent"
        sothree:layout_constraintHorizontal_bias="0.5"
        sothree:layout_constraintStart_toStartOf="parent"
        sothree:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/main_layout_sliding_up"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

<!--        author,genre_id,description,price-->
        <EditText
            android:id="@+id/name_book_create_field"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="470dp"
            android:hint="название"/>

        <EditText
            android:id="@+id/description_book_create_field"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="400dp"
            android:hint="описание"/>

        <EditText
            android:id="@+id/author_book_create_field"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="330dp"
            android:hint="автор"/>

        <Spinner
            android:id="@+id/genre_book_create_spinner"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="260dp"
            android:hint="жанр"/>


        <Button
            android:id="@+id/to_add_book_db"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/black"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"
            android:text="добавить"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_icon_sliding_panel"
            android:clickable="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/close_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="280dp"
            android:layout_marginBottom="28dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>